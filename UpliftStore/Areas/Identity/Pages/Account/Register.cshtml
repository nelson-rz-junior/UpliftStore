@page
@model RegisterModel
@using UpliftStore.Utility
 
@{
    ViewData["Title"] = "Register New Employee";
}

<div class="backgroundWhite border">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">@ViewData["Title"]</h2>
            <br />
        </div>
        <div class="col-12">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.Name"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.Email"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.Street"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.Street" class="form-control" />
                        <span asp-validation-for="Input.Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.City"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.City" class="form-control" />
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.State"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.State" class="form-control" />
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.PostalCode"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.PostalCode" class="form-control" />
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.PhoneNumber"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.Password"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.ConfirmPassword"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        Role
                    </div>
                    <div class="col-6">
                        <input type="radio" name="UserRole" value="@SD.Admin" /> @SD.Admin
                        <input type="radio" name="UserRole" value="@SD.Manager" checked /> @SD.Manager
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6 offset-2">
                        <button type="submit" class="btn btn-primary form-control">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
